/**index.wxss**/

.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.kind-list__item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
}

.king-list__img {
  width: 30px;
  height: 30px;
}

.kind-list__item-hd {
  padding: 20px;
  -webkit-transition: opacity 0.2s;
  transition: opacity 0.2S;
}

.kind-list__item-hd_show {
  /* 不透明度 */
  opacity: 0.4;
}
